<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/torrebbva"
        android:scaleType="centerCrop"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#CC828282"
        android:gravity="center">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/circulo_image"
            android:padding="10dp"
            android:src="@drawable/bbva" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tipo_2"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:background="@drawable/btn_redondeado_white"
            android:elevation="5dp"
            android:layout_marginBottom="30dp"
            android:textColor="#1D335A"
            android:text="Iniciar sesion"
            android:id="@+id/IrLogin"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tipo_2"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:background="@drawable/btn_redondeado_white"
            android:elevation="5dp"
            android:layout_marginBottom="30dp"
            android:textColor="#1D335A"
            android:text="Registrarse"
            android:id="@+id/IrRegistro"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/tipo_2"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:background="@drawable/btn_redondeado_white"
            android:elevation="5dp"
            android:layout_marginBottom="30dp"
            android:textColor="#1D335A"
            android:text="Mapa"
            android:id="@+id/IrMaps"/>
    </LinearLayout>

</RelativeLayout>